<h1>To-do!</h1>
    <ul class ="card">
       <% @todos.each do |todo| %>
        <li>
            <input type="checkbox" /> 
            <a href="/todo/show/<%= todo.id %>"><%= todo.description %></a>
            <span class="pomodoro-estimate small-pomodoro-estimate"><%= todo.pomodoro_estimate %> pomodoros</span>
        </li>
    
        <% end %>
    </ul>
    <div id="new-todo-block">
            <a href="/todo/new" class="button add-new-todo-button" id="add-new-todo-button"><button>Add a to-do</button></a>
        </div>
